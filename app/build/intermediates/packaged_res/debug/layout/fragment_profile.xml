<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_screen_splash"
        android:orientation="vertical"
        android:weightSum="25"
        tools:context=".activity.ui.profile.ProfileFragment">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:text="@string/complete_profile"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:gravity="center">
        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/frameLayout_image_profile">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/profile_pic"
                android:layout_gravity="bottom|center_horizontal" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu_camera"
                android:layout_gravity="bottom|right"
                />
        </FrameLayout>

    </LinearLayout>

        <EditText
            android:id="@+id/profile_name_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="@string/name"
            android:textColor="@color/black"
            android:inputType="text"
            android:layout_weight="3"
            android:textColorHint="@color/light_gray"
            android:background="@drawable/rounded_corners_edit_text"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingStart="@dimen/_6sdp"/>
        <EditText
            android:id="@+id/profile_phoneNumber_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:inputType="phone"
            android:textColor="@color/black"
            android:layout_marginVertical="@dimen/_5sdp"
            android:hint="@string/phoneNumber"
            android:layout_weight="3"
            android:textColorHint="@color/light_gray"
            android:background="@drawable/rounded_corners_edit_text"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingStart="@dimen/_6sdp"/>
        <EditText
            android:id="@+id/profile_email_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:layout_marginVertical="@dimen/_5sdp"
            android:hint="@string/email"
            android:layout_weight="3"
            android:textColorHint="@color/light_gray"
            android:background="@drawable/rounded_corners_edit_text"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingStart="@dimen/_6sdp"/>
        <Spinner
            android:id="@+id/spinner_location_profile_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_weight="3"
            android:background="@drawable/rounded_corners_edit_text"
            android:entries="@array/locations"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:foregroundTint="@color/white"
            android:backgroundTint="@color/white"
            android:popupBackground="@color/white"/>
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="@dimen/_10sdp">

        </LinearLayout>-->
        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginVertical="@dimen/_10sdp">

        </LinearLayout>-->

        <Button
            android:id="@+id/bt_submit_profile_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_80sdp"
            android:background="@drawable/round_button_submit"
            android:text="@string/update"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />


    </LinearLayout>