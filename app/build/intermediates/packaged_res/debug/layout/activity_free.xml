<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_screen_splash"
    android:orientation="vertical"
    tools:context=".activity.FreeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        android:text="@string/upload_books"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/add_details"
        android:textSize="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:id="@+id/main_free"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_main_free"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:background="@drawable/rounded_button_for_image"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Main"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/front_free"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_front_free"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:background="@drawable/rounded_button_for_image"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Front"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/back_free"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_back_free"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:background="@drawable/rounded_button_for_image"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Back"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>




    </LinearLayout>
    <!--<Button
        android:id="@+id/btn_image_url_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_for_image"
        android:layout_margin="@dimen/_10sdp"
        android:paddingVertical="@dimen/_40sdp"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        android:text="+ Add Image"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_for_image"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/book_title"
            android:layout_marginHorizontal="@dimen/_10sdp"/>
        <EditText
            android:id="@+id/edt_book_title_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:paddingStart="@dimen/_5sdp"
            android:background="@drawable/rounded_corners_edit_text"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/description"
            android:layout_marginHorizontal="@dimen/_10sdp"/>
        <EditText
            android:id="@+id/edt_description_free"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/rounded_corners_edit_text"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:inputType="text|textMultiLine"
            android:gravity="top"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>
        <Spinner
            android:id="@+id/edt_location_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_edit_text"
            android:entries="@array/locations"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:foregroundTint="@color/white"
            android:backgroundTint="@color/white"
            android:popupBackground="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/publish_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_30sdp"
            android:background="@drawable/round_button_submit"
            android:text="@string/publish"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>
</LinearLayout>