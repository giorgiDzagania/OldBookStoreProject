<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_screen_splash"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".activity.DisplayAdActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    android:weightSum="3"
    android:layout_marginVertical="@dimen/_5sdp">
    <ImageView
        android:id="@+id/display_ad_image_main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_button_for_image"
        android:src="@drawable/ic_baseline_image_24"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="@dimen/_5sdp"
        />
    <ImageView
        android:id="@+id/display_ad_image_front"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_button_for_image"
        android:src="@drawable/ic_baseline_image_24"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="@dimen/_5sdp"
        />
    <ImageView
        android:id="@+id/display_ad_image_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/rounded_button_for_image"
        android:src="@drawable/ic_baseline_image_24"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="@dimen/_5sdp"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:layout_marginVertical="@dimen/_2sdp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. "/>
                <TextView
                    android:id="@+id/display_ad_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Title: "
                android:layout_marginVertical="@dimen/_2sdp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/display_ad_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="@string/book_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description: "
                android:layout_marginVertical="@dimen/_2sdp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/display_ad_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/description"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:layout_margin="@dimen/_2sdp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/display_ad_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Location"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_2sdp"
                android:text="Category: "
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/display_ad_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Category"/>
        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic_display_ad"
            app:civ_border_width="4dp"
            android:layout_centerInParent="true"
            app:civ_border_color="#FF000000"
            android:src="@drawable/profile_pic"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginRight="@dimen/_20sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/display_ad_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/display_ad_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/display_ad_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/display_ad_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/chat_display_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat"
            android:drawableLeft="@drawable/icons8_facebook_messenger_18___"
            android:drawablePadding="@dimen/_2sdp"
            android:background="@drawable/round_button_submit"
            android:layout_marginHorizontal="@dimen/_5sdp"/>
        <Button
            android:id="@+id/dial_display_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_2sdp"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:text="@string/dial"
            android:background="@drawable/round_button_submit"
            android:layout_marginHorizontal="@dimen/_5sdp"/>
        <Button
            android:id="@+id/report_display_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report"
            android:textColor="@color/red"
            android:drawableLeft="@drawable/ic_baseline_warning_24"
            android:drawablePadding="@dimen/_2sdp"
            android:background="@drawable/round_button_submit"
            android:layout_marginHorizontal="@dimen/_5sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/feedback"
            android:layout_marginTop="@dimen/_10sdp"/>
        <EditText
            android:id="@+id/feedback_display_ad"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/rounded_corners_edit_text"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_5sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:inputType="text|textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="@dimen/_10sdp"/>
        <Button
            android:id="@+id/display_ad_submit_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button_submit"
            android:text="@string/submit"
            android:textColor="@color/black"/>
    </LinearLayout>


</LinearLayout>